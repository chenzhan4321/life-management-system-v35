{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    },
    {
      "source": "/health",
      "destination": "/api/index.py"
    },
    {
      "source": "/tasks",
      "destination": "/api/index.py"
    },
    {
      "source": "/tasks/(.*)",
      "destination": "/api/index.py"
    },
    {
      "source": "/ai/(.*)",
      "destination": "/api/index.py"
    },
    {
      "source": "/analytics/(.*)",
      "destination": "/api/index.py"
    }
  ]
}